<a href="#/sections/stories/create" class="create-story-btn" type="submit">Share your story</a>
<div class="stories-section-wrapper">
  <div class="stories">

    {{#each stories}}


    <div class="current-story-dashboard">
      {{#each images}}
      <div class="rescued-animal-img-wrapper">
        <img class="story-image-render" src="{{src}}" alt="">
      </div>
      {{else}}
      <h5 class="text-center">NO STORY PICTURES</h5>
      {{/each}}
      <div class="story-title">
        <h3>{{title}}</h3>
      </div>
      <p class="by-story-article-owner">by</p>
      <p class="story-article-owner">{{authorName}}</p>
      <div class="story-paragraph">
        <p>{{description}}</p>
        <a href="#/cause/details/{{idFromFirestormDataBase}}" class="btn btn-success">See the entire story</a>
      </div>
    </div>
    {{else}}
    <h1 class="text-center">No stories yet. Be the first to post a story!</h1>
    {{/each}}

  </div>


  {{> footer}}